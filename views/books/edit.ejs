<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">Edit Book</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/books/<%=foundBook._id %>?_method=PUT" method="POST" novalidate class="validated-form">
        <div class="mb-3">
            <label for="name" class="form-label"><b>Book Name</b></label>
            <input type="text" class="form-control" name="book[name]" placeholder="Name" id="name" value="<%=foundBook.name %>" required>
             <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="img" class="form-label"><b>Image URL</b></label>
            <input type="text" class="form-control" name="book[img]" placeholder="Image" id="img" value="<%=foundBook.img %>" required>
             <div class="valid-feedback">
                Looks good!
            </div>
        </div class="mb-3">
        <div class="mb-3"> 
            <label for="author" class="form-label"><b>Author Name</b></label>
            <input type="text" class="form-control" name="book[author]" placeholder="Author" id="author" value="<%=foundBook.author %>" required>
             <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label"><b>Price</b></label>
            <div class="input-group">
            <span class="input-group-text" id="basic-addon1">â‚¹</span>
            <input type="number" name="book[price]" class="form-control" placeholder="0.00" id="price" value="<%=foundBook.price %>" required>
            </div>
             <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label"><b>Description</b></label>
            <textarea name="book[description]" id="description" class="form-control" cols="30" rows="3" required><%=foundBook.description %> </textarea>
             <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="pages" class="form-label"><b>Pages</b></label>
            <input type="number" class="form-control" name="book[pages]" placeholder="Pages" id="pages" value="<%=foundBook.pages %>" required>
             <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <button class="btn btn-info ">Update Book</button>
        <a href="/books/<%=foundBook.id %>" class="btn btn-danger"> Cancel</a>
        </form>
    </div>
</div>